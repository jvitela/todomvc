<require from="Components/TodosHeader"></require>
<require from="Components/TodosList"></require>
<require from="Components/TodosFooter"></require>

<todos-header oninput={{createTodo}}></todos-header>

{{#if todos.length}}
<todos-list 
  todos={{visibleTodos}}
  onremove={{removeTodo}} 
  onchange={{editTitle}} 
  oncompleted={{toggleCompleted}}
  onediting={{toggleEditing}}
  oncomplete-all={{toggleAllCompleted}}
  all-completed={{allCompleted}}
  ></todos-list>

<todos-footer 
  filter={{filter}}
  todos={{todos}} 
  clear-completed={{clearCompleted}}
  ></todos-footer>
{{/if}}